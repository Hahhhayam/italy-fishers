@model DAL.Entity.Person

@{
}

<h2>Відредагувати</h2>

<form asp-controller="Persons" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="first_name"></label>
        <input asp-for="first_name" class="form-control" />
        <label asp-for="middle_name"></label>
        <input asp-for="middle_name" class="form-control" />
        <label asp-for="last_name"></label>
        <input asp-for="last_name" class="form-control" />
        <label asp-for="passport_id"></label>
        <input asp-for="passport_id" class="form-control" />
    </div>
    <button type="submit" id="submitLocationBtn" class="btn btn-submitLocation">Застосувати зміни</button>
    <input asp-for="id" type="hidden" />
</form>
