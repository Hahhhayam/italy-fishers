@model IEnumerable<DAL.Entity.Status>

@{
}

<div>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Текст</th>
            <th>Дія</th>
        </tr>
        @foreach (var entity in Model) 
        {
            <tr>
                <td>@entity.id</td>
                <td>@entity.caption</td>
                <td>
                    <a asp-area="" asp-controller="Statuses" asp-action="Modify" asp-route-id=@entity.id>Редагувати</a> |
                    <a asp-area="" asp-controller="Statuses" asp-action="Delete" asp-route-id=@entity.id>Видалити</a>
                </td>
            </tr>
        }
    </table>
</div>
<a asp-area="" asp-controller="Statuses" asp-action="Add">Додати</a>
