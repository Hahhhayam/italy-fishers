@model IEnumerable<DAL.Entity.Watersource>

@{
}

<div>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Назва</th>
            <th>ID типу</th>
            <th>Aдреса</th>
            <th>Дія</th>
        </tr>
        @foreach (var entity in Model) 
        {
            <tr>
                <td>@entity.id</td>
                <td>@entity.name</td>
                <td>@entity.type_id</td>
                <td>@entity.adress</td>
                <td>
                    <a asp-area="" asp-controller="Watersources" asp-action="Modify" asp-route-id=@entity.id>Редагувати</a> |
                    <a asp-area="" asp-controller="Watersources" asp-action="Delete" asp-route-id=@entity.id>Видалити</a>
                </td>
            </tr>
        }
    </table>
</div>
<a asp-area="" asp-controller="Watersources" asp-action="Add">Додати</a>
